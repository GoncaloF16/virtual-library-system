doctype html
html(lang="pt-br")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Biblioteca Virtual 
    // Google Fonts
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet")
    // Bootstrap CSS
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css",
      rel="stylesheet",
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT",
      crossorigin="anonymous"
    )
    // Bootstrap Icons
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    // Custom Styles
    link(rel="stylesheet" href="/css/styles.css")

  body
  .d-flex
    // Sidebar - desktop fixo, mobile escondido por padrão
    aside.bg-dark.text-white.p-3.vh-100.shadow-sm.d-none.d-md-block(style="width: 260px; overflow-y: auto;")
      h2.fs-4.mb-4.text-center 
        i.bi.bi-book.me-2
        | Biblioteca
      ul.nav.flex-column
        li.nav-item.mb-2
          a.nav-link.text-white(href="/")
            i.bi.bi-book-half.me-2
            span Livros
        li.nav-item.mb-2
          a.nav-link.text-white(href="/leitores")
            i.bi.bi-people-fill.me-2
            span Leitores
        li.nav-item.mb-2
          a.nav-link.text-white(href="/emprestimos")
            i.bi.bi-journal-check.me-2
            span Empréstimos
      
      // Divider
      hr.my-4(style="opacity: 0.2;")
      
      // Info section
      .mt-auto.p-3.text-center(style="background: rgba(255,255,255,0.05); border-radius: 12px;")
        i.bi.bi-info-circle.me-2(style="font-size: 1.2rem;")
        small Sistema de Gestão
        br
        small.text-muted(style="font-size: 0.75rem;") v1.0.0

    // Main content area
    .flex-grow-1.d-flex.flex-column.min-vh-100
      // Header com botão hamburguer só mobile
      header.bg-light.d-flex.align-items-center.p-2.shadow-sm.d-md-none
        button.btn.btn-primary(type="button" id="btnToggleSidebar")
          i.bi.bi-list

        h1.fs-5.ms-3.mb-0 Biblioteca Virtual

      main.container.my-4
        block content

      footer.bg-light.text-center.py-3.mt-auto.border-top
        .container
          .row
            .col-md-12
              p.mb-1
                i.bi.bi-book-fill.me-2
                strong Biblioteca Virtual
              p.mb-0.text-muted
                small © 2025 Todos os direitos reservados

    // VARIÁVEIS
    - var leitores = typeof leitores !== 'undefined' ? leitores : []
    - var livros = typeof livros !== 'undefined' ? livros : []

    // MODAIS
    .modal.fade#modalNovoLivro(tabindex="-1" aria-labelledby="modalNovoLivroLabel" aria-hidden="true")
      .modal-dialog.modal-dialog-centered
        .modal-content
          .modal-header
            h5.modal-title#modalNovoLivroLabel
              i.bi.bi-book-fill.me-2
              | Adicionar/Editar Livro
            button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Fechar")
          .modal-body
            form#formNovoLivro
              .mb-3
                label.form-label(for="titulo")
                  i.bi.bi-bookmark-fill.me-1
                  | Título
                input.form-control(type="text" id="titulo" name="titulo" placeholder="Digite o título do livro" required)
              .mb-3
                label.form-label(for="autor")
                  i.bi.bi-person-fill.me-1
                  | Autor
                input.form-control(type="text" id="autor" name="autor" placeholder="Digite o nome do autor" required)
              .mb-3
                label.form-label(for="genero")
                  i.bi.bi-tag-fill.me-1
                  | Gênero
                input.form-control(type="text" id="genero" name="genero" placeholder="Digite o gênero" required)
          .modal-footer
            button.btn.btn-secondary(type="button" data-bs-dismiss="modal")
              i.bi.bi-x-circle.me-1
              | Cancelar
            button.btn.btn-primary(type="submit" form="formNovoLivro")
              i.bi.bi-check-circle.me-1
              | Submeter

    .modal.fade#modalNovoLeitor(tabindex="-1" aria-labelledby="modalNovoLeitorLabel" aria-hidden="true")
      .modal-dialog.modal-dialog-centered
        .modal-content
          .modal-header
            h5.modal-title#modalNovoLeitorLabel
              i.bi.bi-person-plus-fill.me-2
              | Adicionar/Editar Leitor
            button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Fechar")
          .modal-body
            form#formNovoLeitor
              .mb-3
                label.form-label(for="nome")
                  i.bi.bi-person-fill.me-1
                  | Nome
                input.form-control(type="text" id="nome" name="nome" placeholder="Digite o nome completo" required)
              .mb-3
                label.form-label(for="email")
                  i.bi.bi-envelope-fill.me-1
                  | Email
                input.form-control(type="email" id="email" name="email" placeholder="exemplo@email.com" required)
          .modal-footer
            button.btn.btn-secondary(type="button" data-bs-dismiss="modal")
              i.bi.bi-x-circle.me-1
              | Cancelar
            button.btn.btn-primary(type="submit" form="formNovoLeitor")
              i.bi.bi-check-circle.me-1
              | Submeter

    .modal.fade#modalNovoEmprestimo(tabindex="-1" aria-labelledby="modalNovoEmprestimoLabel" aria-hidden="true")
      .modal-dialog.modal-dialog-centered
        .modal-content
          .modal-header
            h5.modal-title#modalNovoEmprestimoLabel
              i.bi.bi-journal-plus.me-2
              | Adicionar/Editar Empréstimo
            button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Fechar")
          .modal-body
            form#formNovoEmprestimo
              input(type="hidden" id="id" name="id")
              .mb-3
                label.form-label(for="leitor_id")
                  i.bi.bi-person-fill.me-1
                  | Leitor
                select.form-select(id="leitor_id" name="leitor_id" required)
                  option(value="" disabled selected) Selecione um leitor
                  each leitor in leitores
                    option(value=leitor.id)= leitor.nome
              .mb-3
                label.form-label(for="livro_id")
                  i.bi.bi-book-fill.me-1
                  | Livro
                select.form-select(id="livro_id" name="livro_id" required)
                  option(value="" disabled selected) Selecione um livro
                  each livro in livros
                    option(value=livro.id)= livro.titulo
              .mb-3
                label.form-label(for="data_emprestimo")
                  i.bi.bi-calendar-event.me-1
                  | Data Empréstimo
                input.form-control(type="date" id="data_emprestimo" name="data_emprestimo" required)
              .mb-3
                label.form-label(for="data_devolucao")
                  i.bi.bi-calendar-check.me-1
                  | Data Devolução
                input.form-control(type="date" id="data_devolucao" name="data_devolucao")
          .modal-footer
            button.btn.btn-secondary(type="button" data-bs-dismiss="modal")
              i.bi.bi-x-circle.me-1
              | Cancelar
            button.btn.btn-primary(type="submit" form="formNovoEmprestimo")
              i.bi.bi-check-circle.me-1
              | Submeter

    // JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js", crossorigin="anonymous")
    script(src="/js/app.js")
