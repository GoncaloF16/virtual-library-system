extends layout/fe_master

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h2.mb-0.text-primary
      i.bi.bi-people-fill.me-2
      | Lista de Leitores
    
    a.btn.btn-primary.btn-lg(
      data-bs-toggle="modal",
      data-bs-target="#modalNovoLeitor"
    ) 
      i.bi.bi-plus-circle.me-2
      | Novo Leitor

  if leitores.length
    .table-responsive
      table.table.table-hover.mt-3
        thead.table-dark
          tr
            th
              i.bi.bi-person-fill.me-2
              | Nome
            th
              i.bi.bi-envelope-fill.me-2
              | Email
            th.text-end
              i.bi.bi-gear-fill.me-2
              | Ações
        tbody
          each leitor in leitores
            tr
              td
                i.bi.bi-person-circle.me-2.text-primary
                strong= leitor.nome
              td
                i.bi.bi-envelope.me-2.text-muted
                = leitor.email
              td.text-end
                a.btn.btn-warning.btn-sm.me-2(
                  href="#",
                  data-bs-toggle="modal",
                  data-bs-target="#modalNovoLeitor",
                  data-id=leitor.id,
                  data-nome=leitor.nome,
                  data-email=leitor.email
                ) 
                  i.bi.bi-pencil-fill.me-1
                  | Editar
                button.btn.btn-danger.btn-sm(
                  type="button",
                  onclick=`apagarLeitor('${leitor.id}')`
                ) 
                  i.bi.bi-trash-fill.me-1
                  | Excluir
  else
    .text-center.mt-5.p-5(style="background: rgba(255,255,255,0.7); border-radius: 12px;")
      i.bi.bi-people.text-muted(style="font-size: 4rem;")
      p.text-muted.mt-3.mb-0(style="font-size: 1.1rem;") Nenhum leitor cadastrado ainda.
      p.text-muted.small Clique em "Novo Leitor" para adicionar o primeiro leitor.
